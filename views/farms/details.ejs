<%- include('../partials/head') %>%> %>
<div class="p-5 mb-4 bg-light rounded-3">
   <div class="container-fluid py-5">
      <h1 class="display-5 fw-bold text-break">
         <%= farm.name %>
      </h1>
      <h2>City: <%= farm.city %></h2>
      <p class="col-md-8 fs-4">Email: <a href="mailto:<%= farm.email %>"><%= farm.email %></a>
      </p>
      <a href="/farms/<%= farm._id %>/products/new" class="btn btn-primary btn-lg" type="button">Add product</a>
      <a href="/farms/<%= farm._id %>/edit" class="btn btn-outline-primary btn-lg" type="button">Edit</a>
      <form action="/farms/<%= farm._id %>?_method=DELETE" method="POST" style="display: inline">
         <button class="btn btn-outline-danger btn-lg" type="submit">Delete</button>
      </form>
      <hr>
      <!-- FARM PRODUCTS -->
      <h3>All Products</h3>
      <p class="fs-4"><%- farm.products.length===0 ? "Didn't find anything" : '' %></p>
      <div class="row">
         <% for(let product of farm.products){%>
         <div class="col-sm-auto mb-3" style="min-width: 220px;">
            <div class="card">
               <div class="card-body">
                  <h5 class="card-title">
                     <%= product.name %>
                  </h5>
                  <p class="card-text">Price: <%= product.price %>
                  </p>
                  <a href="/products/<%= product._id %>" class="btn btn-primary">Details</a>
               </div>
            </div>
         </div>
         <% } %>
      </div>
   </div>
</div>

<%- include('../partials/footer') %>
