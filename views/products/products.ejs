<%- include('../partials/head') %>
<h1><%= category %> products</h1>
<%- products.length===0 ? "<h2>Didn't find anything</h2>":"" %>
<div class="row">
   <% for(let product of products){%>
   <div class="col-sm-auto mb-3" style="min-width: 220px;">
      <div class="card">
         <div class="card-body">
            <h5 class="card-title">
               <%= product.name %>
            </h5>
            <p class="card-text">Price: <%= product.price %>
            </p>
            <a href="/products/<%= product._id %>" class="btn btn-primary">Details</a>
         </div>
      </div>
   </div>
   <% } %>
</div>
<%- include('../partials/footer') %>
